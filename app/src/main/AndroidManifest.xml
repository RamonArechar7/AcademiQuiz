<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AcademiQuiz1">
        
        <!-- Login Activity - Main Launcher -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AcademiQuiz1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register Activity -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.AcademiQuiz1" />

        <!-- Dashboard Activity -->
        <activity
            android:name=".activities.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.AcademiQuiz1" />

        <!-- Create Quiz Activity -->
        <activity
            android:name=".activities.CreateQuizActivity"
            android:exported="false"
            android:theme="@style/Theme.AcademiQuiz1" />

        <!-- Take Quiz Activity -->
        <activity
            android:name=".activities.TakeQuizActivity"
            android:exported="false"
            android:theme="@style/Theme.AcademiQuiz1" />

        <!-- Results Activity -->
        <activity
            android:name=".activities.ResultsActivity"
            android:exported="false"
            android:theme="@style/Theme.AcademiQuiz1" />

        <!-- Result Details Activity -->
        <activity
            android:name=".activities.ResultDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.AcademiQuiz1" />

        <!-- Quiz List Activity -->
        <activity
            android:name=".activities.QuizListActivity"
            android:exported="false"
            android:theme="@style/Theme.AcademiQuiz1" />

        <!-- Settings Activity -->
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.AcademiQuiz1" />

        <!-- Users Management Activity (Admin only) -->
        <activity
            android:name=".activities.UsersManagementActivity"
            android:exported="false"
            android:theme="@style/Theme.AcademiQuiz1" />

    </application>

</manifest>